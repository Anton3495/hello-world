public class ThreeNumbers {

public static void main(String[] args) {

int a = 5;

int b = 5;

int c = 5;

int min = 0, sum = 0;

min = a;

if (b < min)

min = b;

if (c < min)

min = c;

System.out.println("Minimum = " + min);

sum = a + b + c - min;

System.out.println("Sum of largest two numbers is: " + sum);

}

}
